<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="container">
    <header>
        <div class="header-section">
            <a asp-page="/Index" class="unlink">
                <img src="~/images/logo.svg">
            </a>
        </div>
        <div class="header-section blue-style">
            <a asp-page="/Index" class="unlink">Avaleht</a>
        </div>
        <div class="header-section">
            <a asp-page="/CreateEvent" class="unlink">Ürituse lisamine</a>
        </div>
        <div class="header-section header-section-logo">
            <a asp-page="/Index" class="unlink">
                <img src="~/images/symbol.svg">
            </a>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer gray-style">
        <div class="footer-section">
            <h3>Curabitur</h3>
            Emauris<br>
            Kfringilla
        </div>
        <div class="footer-section">
            <h3>Fusce</h3>
            Econsectetur<br>
            Ksolit
        </div>
        <div class="footer-section">
            <h3>Kontakt</h3>
        </div>
        <div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>