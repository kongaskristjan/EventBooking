@page
@model CreateEventModel
@{
    ViewData["Title"] = "Lisa üritus";
}

<div class="form-background">
<div class="form-block">
<h2 class="form-heading">Ürituse lisamine</h2>
<form method="post" asp-page-handler="CreateEvent">
    <table>
    <tbody>
        <tr>
            <td><label asp-for="formEvent.Name">Ürituse nimi:</label></td>
            <td><input asp-for="formEvent.Name" class="form form-control" required /></td>
        </tr>
        <tr>
            <td><label asp-for="formEvent.Date">Toimumisaeg:</label></td>
            <td><input asp-for="formEvent.Date" class="form form-control" placeholder="pp.kk.aaaa hh:mm" required pattern="\d{2}\.\d{2}\.\d{4} \d{2}:\d{2}" /></td>
        </tr>
        <tr>
            <td><label asp-for="formEvent.Location">Koht:</label></td>
            <td><input asp-for="formEvent.Location" class="form form-control" required /></td>
        </tr>
        <tr>
            <td><label asp-for="formEvent.AdditionalInformation">Lisainfo:</label></td>
            <td><input asp-for="formEvent.AdditionalInformation" class="form form-control" /></td>
        </tr>
    </tbody>
    </table>
    <div>
    <a asp-page="/Index" type="button" class="light-gray-style m-1 rounded sized-button unlink">Tagasi</a>
    <input type="submit" class="blue-style m-1 rounded sized-button move-text-down" value="Lisa" />
    </div>
</form>
</div>
</div>
